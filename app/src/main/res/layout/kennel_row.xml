<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/kennel_row_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Buddy.CircleImageView" />

    <TextView
        android:id="@+id/kennel_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/kennel_row_image"
        app:layout_constraintTop_toTopOf="@id/kennel_row_image"
        tools:text="Папа Кот" />

    <TextView
        android:id="@+id/kennel_row_volunteers_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/kennel_row_image"
        app:layout_constraintTop_toBottomOf="@id/kennel_row_name"
        tools:text="137 волонтеров" />

    <TextView
        android:id="@+id/kennel_row_animals_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/kennel_row_image"
        app:layout_constraintTop_toBottomOf="@id/kennel_row_volunteers_amount"
        tools:text="1575 животных" />

</androidx.constraintlayout.widget.ConstraintLayout>