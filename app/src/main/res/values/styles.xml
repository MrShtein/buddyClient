<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/apk/res/android">

    <style name="Widget.Buddy.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.Buddy.CardView.Shape</item>
    </style>

    <style name="TextAppearance.Buddy.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/cian5</item>
    </style>

    <style name="Widget.Buddy.CardView.Shape">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="overlaySearchInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.SmallComponent</item>

    </style>

    <style name="shapeAppearanceForSearchTextInputStyle" parent="mySt">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="shapeAppearanceForFilterChips" parent="mySt">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="shapeAppearanceForInputTextInputStyle" parent="mySt">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="largeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>

    </style>

    <style name="textInputContainerForFilterAutocomplete" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeColor">@color/cian5</item>
        <item name="hintTextColor">@color/grey3</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="endIconDrawable">@drawable/expand_less_more</item>
        <item name="endIconTint">@color/grey3</item>
    </style>

</resources>