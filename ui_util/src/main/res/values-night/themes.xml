        <item name="colorSecondary">@color/secondary80</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/secondary20</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceLargeComponent">@style/mySt</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="colorPrimaryContainer">@color/primary30</item>
