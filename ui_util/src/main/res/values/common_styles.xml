<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDialog" parent="MaterialAlertDialog.Material3">
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="textInputContainer" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_grey2</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeColor">@color/cian5</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/grey3</item>
        <item name="android:textColorHint">@color/grey3</item>
    </style>

    <style name="cursorColorForInputs">
        <item name="colorPrimary">@color/cian5</item>
    </style>

    <style name="textInputContainerForAutocomplete" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/background_grey2</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxStrokeColor">@color/cian5</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/grey3</item>
    </style>

    <style name="ShapeAppearance.Buddy.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="changeEditTextPadding" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyLayout" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@color/input_background</item>
        <item name="colorPrimary">@color/cian5</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearanceLargeComponent">@style/mySt</item>
    </style>

    <style name="mySt" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ShoppingList.BottomSheetDialog</item>
    </style>

    <style name="ShoppingList.BottomSheetDialog" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>