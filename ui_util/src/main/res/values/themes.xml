<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuddyAndroidClient" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cian5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/choice_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <item name="colorSecondaryContainer">@color/cian5_15</item>

        <!-- Status bar color. -->
<!--         Customize your theme here. -->
        <item name="shapeAppearanceLargeComponent">@style/mySt</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="android:colorBackground">@color/background_grey2</item>

        <item name="materialCardViewStyle">@style/Widget.Buddy.CardView</item>


    </style>

    <style name="mySt">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">5dp</item>

    </style>



</resources>